<%- include("../../views/partials/user/header") %>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order Placed Successfully</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        
        body {
            background-color: #f5f7fa;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            padding: 20px;
        }
        
        .order-container {
            background-color: white;
            border-radius: 20px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            width: 100%;
            /* max-width: 500px; */
            padding: 40px;
            text-align: center;
            overflow: hidden;
            position: relative;
        }
        
        .success-icon {
            width: 100px;
            height: 100px;
            margin: 0 auto 20px;
            border-radius: 50%;
            background-color: #e6f7ee;
            display: flex;
            justify-content: center;
            align-items: center;
            position: relative;
        }
        
        .checkmark {
            display: block;
            stroke-width: 4;
            stroke: #4caf50;
            stroke-linecap: round;
            stroke-dasharray: 100;
            stroke-dashoffset: 100;
            animation: draw 1s ease-in-out forwards;
            width: 52px;
            height: 52px;
        }
        
        .success-pulse {
            position: absolute;
            width: 100%;
            height: 100%;
            border-radius: 50%;
            background-color: #4caf50;
            opacity: 0.2;
            animation: pulse 2s infinite;
        }
        
        @keyframes draw {
            to {
                stroke-dashoffset: 0;
            }
        }
        
        @keyframes pulse {
            0% {
                transform: scale(0.95);
                opacity: 0.7;
            }
            50% {
                transform: scale(1.05);
                opacity: 0.3;
            }
            100% {
                transform: scale(0.95);
                opacity: 0.7;
            }
        }
        
        h1 {
            color: #333;
            margin-bottom: 12px;
            font-size: 28px;
            font-weight: 600;
            letter-spacing: -0.5px;
        }
        
        p {
            color: #666;
            margin-bottom: 30px;
            font-size: 16px;
        }
        
        .order-details {
            background-color: #f8f9fb;
            border-radius: 12px;
            padding: 24px;
            margin-bottom: 30px;
        }
        
        .detail-row {
            display: flex;
            justify-content: space-between;
            padding: 10px 0;
            border-bottom: 1px solid #eaedf0;
        }
        
        .detail-row:last-child {
            border-bottom: none;
        }
        
        .detail-label {
            font-weight: 500;
            color: #666;
            font-size: 15px;
        }
        
        .detail-value {
            font-weight: 600;
            color: #333;
            font-size: 15px;
        }
        
        .status {
            display: inline-block;
            padding: 5px 12px;
            background-color: #e6f7ee;
            color: #4caf50;
            border-radius: 20px;
            font-weight: 600;
            font-size: 14px;
        }
        
        .button {
            display: inline-block;
            background-color: #4caf50;
            color: white;
            padding: 14px 30px;
            border-radius: 8px;
            text-decoration: none;
            font-weight: 600;
            transition: background-color 0.3s ease;
            border: none;
            cursor: pointer;
            font-size: 16px;
        }
        
        .button:hover {
            background-color: #43a047;
        }
        
        .confetti {
            position: absolute;
            width: 10px;
            height: 10px;
            opacity: 0;
            animation: confetti 4s ease-in-out infinite;
        }
        
        @keyframes confetti {
            0% {
                transform: translateY(0) rotate(0deg);
                opacity: 1;
            }
            100% {
                transform: translateY(-100px) rotate(720deg);
                opacity: 0;
            }
        }
        
        .c1 { background-color: #ffbe0b; left: 10%; animation-delay: 0.2s; }
        .c2 { background-color: #fb5607; left: 20%; animation-delay: 0.5s; }
        .c3 { background-color: #ff006e; left: 30%; animation-delay: 0.8s; }
        .c4 { background-color: #8338ec; left: 40%; animation-delay: 1.1s; }
        .c5 { background-color: #3a86ff; left: 50%; animation-delay: 1.4s; }
        .c6 { background-color: #38b000; left: 60%; animation-delay: 1.7s; }
        .c7 { background-color: #ff477e; left: 70%; animation-delay: 2.0s; }
        .c8 { background-color: #ff7b00; left: 80%; animation-delay: 2.3s; }
        .c9 { background-color: #5e60ce; left: 90%; animation-delay: 2.6s; }
    </style>
</head>
<body>
    <div class="order-container">
        <!-- Confetti animation elements -->
        <div class="confetti c1"></div>
        <div class="confetti c2"></div>
        <div class="confetti c3"></div>
        <div class="confetti c4"></div>
        <div class="confetti c5"></div>
        <div class="confetti c6"></div>
        <div class="confetti c7"></div>
        <div class="confetti c8"></div>
        <div class="confetti c9"></div>
        
        <!-- Success icon with animation -->
        <div class="success-icon">
            <div class="success-pulse"></div>
            <svg class="checkmark" viewBox="0 0 52 52">
                <circle cx="26" cy="26" r="25" fill="none"/>
                <path fill="none" d="M14,27 L22,35 L38,17"/>
            </svg>
        </div>
        
        <h1>Order Placed Successfully!</h1>
        <p>Thank you for your purchase. We've received your order and will process it shortly.</p>
        
        <div class="order-details">
            <div class="detail-row">
                <span class="detail-label">Order ID</span>
                <span class="detail-value"><%= order.orderId %></span>
            </div>
            <div class="detail-row">
                <span class="detail-label">Amount</span>
                <span class="detail-value"><%= order.finalAmount %></span>
            </div>
            <div class="detail-row">
                <span class="detail-label">Status</span>
                <span class="status"><%= order.status %></span>
                <!-- <% for(const item of order.orderItems) {%>
                <span class="status"><%= item.product %></span>
                <%}%> -->
            </div>
        </div>
        
        <a href="/userProfile#orders" class="button">Track Your Order</a>
    </div>
</body>
</html>


<script>
    // This small script ensures animations only run after page load
    document.addEventListener('DOMContentLoaded', function() {
      document.querySelector('.order-container').style.display = 'block';
    });
</script>


<%- include("../../views/partials/user/footer") %>
