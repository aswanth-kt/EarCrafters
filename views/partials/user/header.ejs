/* Mobile menu styling with list appearance */
@media only screen and (max-width: 767px) {
  .mobile-menu {
    display: none;
    position: absolute;
    top: 100%;
    left: 0;
    width: 100%;
    background-color: white;
    padding: 15px 0;
    box-shadow: 0 5px 10px rgba(0,0,0,0.1);
    z-index: 999;
  }
  
  .mobile-menu.show {
    display: block;
  }
  
  .mobile-menu ul {
    padding: 0;
    margin: 0;
    list-style: none; /* Reset default list style */
    display: flex;
    flex-direction: column;
    width: 100%;
  }
  
  .mobile-menu ul li {
    padding: 12px 25px;
    text-align: left;
    border-bottom: 1px solid #f1f1f1; /* Add separator between items */
    position: relative;
    display: block;
    width: 100%;
  }
  
  .mobile-menu ul li:last-child {
    border-bottom: none; /* Remove border from last item */
  }
  
  .mobile-menu ul li a {
    color: #333;
    font-size: 16px;
    font-weight: 600;
    display: block;
    padding: 5px 0;
    width: 100%;
    position: relative;
  }
  
  /* Optional: Add arrow indicators */
  .mobile-menu ul li a:after {
    content: "â€º";
    position: absolute;
    right: 0;
    font-size: 20px;
  }
  
  .canvas__open {
    cursor: pointer;
    display: block;
    font-size: 22px;
    position: absolute;
    right: 15px;
    top: 20px;
  }
  
  .canvas__open.active i:before {
    content: "\f00d";  /* This changes the hamburger to an X when active */
  }
  
  /* Prevent body scrolling when menu is open */
  body.menu-open {
    overflow: hidden;
  }
}

/* Ensure desktop menu is visible on larger screens */
@media only screen and (min-width: 768px) {
  .mobile-menu {
    display: block !important;
  }
  
  .canvas__open {
    display: none;
  }
}

