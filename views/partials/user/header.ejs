<script>
   // Add this script at the end of your body tag before the closing </body>
document.addEventListener('DOMContentLoaded', function() {
  // Get the canvas open button (hamburger menu icon)
  const canvasOpen = document.querySelector('.canvas__open');
  // Get the mobile menu
  const mobileMenu = document.querySelector('.mobile-menu');
  
  // Toggle mobile menu when hamburger icon is clicked
  if (canvasOpen && mobileMenu) {
    canvasOpen.addEventListener('click', function() {
      // Toggle the 'active' class on the hamburger icon
      this.classList.toggle('active');
      
      // Toggle the 'show' class on the mobile menu
      mobileMenu.classList.toggle('show');
      
      // Optional: prevent scrolling when menu is open
      document.body.classList.toggle('menu-open');
    });
  }
  
  // Close menu when clicking outside
  document.addEventListener('click', function(event) {
    if (mobileMenu.classList.contains('show') && 
        !mobileMenu.contains(event.target) && 
        !canvasOpen.contains(event.target)) {
      mobileMenu.classList.remove('show');
      canvasOpen.classList.remove('active');
      document.body.classList.remove('menu-open');
    }
  });
});
</script>