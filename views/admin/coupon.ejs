<%- include("../../views/partials/admin/header") %>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Coupons</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: Arial, sans-serif;
        }
        
        body {
            background-color: #f5f5f5;
            /* padding: 20px; */
        }
        
        .container {
            max-width: 1200px;
            margin: 20px auto;
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
        
        h1 {
            margin-bottom: 20px;
            color: #333;
        }
        
        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }
        
        .search-bar {
            display: flex;
            gap: 10px;
            width: 50%;
        }
        
        .search-bar input {
            flex-grow: 1;
            padding: 8px 12px;
            border: 1px solid #ddd;
            border-radius: 4px;
        }
        
        .search-bar button {
            padding: 8px 16px;
            background-color: #4CAF50;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }
        
        .add-coupon-btn {
            padding: 10px 16px;
            background-color: #2196F3;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-weight: bold;
        }
        
        .coupon-table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }
        
        .coupon-table th, .coupon-table td {
            padding: 12px 15px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }
        
        .coupon-table th {
            background-color: #f2f2f2;
            font-weight: bold;
        }
        
        .coupon-table tr:hover {
            background-color: #f9f9f9;
        }
        
        .status-active {
            color: #4CAF50;
            font-weight: bold;
        }
        
        .status-expired {
            color: #f44336;
            font-weight: bold;
        }
        
        .list-btn, .unlist-btn {
            padding: 6px 12px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            margin-right: 5px;
        }
        
        .list-btn {
            background-color: #4CAF50;
            color: white;
        }
        
        .unlist-btn {
            background-color: #FFC107;
            color: black;
        }
        
        .action-btn {
            padding: 6px 12px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            margin-right: 5px;
        }
        
        .edit-btn {
            background-color: #2196F3;
            color: white;
        }
        
        .delete-btn {
            background-color: #f44336;
            color: white;
        }
        
        .pagination {
            display: flex;
            justify-content: center;
            list-style: none;
            gap: 5px;
        }
        
        .pagination li {
            display: inline-block;
        }
        
        .pagination a {
            color: #666;
            float: left;
            padding: 8px 16px;
            text-decoration: none;
            border: 1px solid #ddd;
            border-radius: 4px;
            transition: background-color 0.3s;
        }
        
        .pagination a.active {
            background-color: #4a6cf7;
            color: white;
            border: 1px solid #4a6cf7;
        }
        
        .pagination a:hover:not(.active) {
            background-color: #f1f1f1;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Manage Coupons</h1>
        
        <div class="header">
            <form action="" method="get">
                <div class="search-bar">
                    <input type="text" placeholder="Search coupons..." name="search" value="<%= search %>">
                    <button type="submit">Search</button>
                    
                    <button class="action-btn delete-btn" type="button" onclick="window.location.href = '/admin/coupon'" style="background-color: #f44336;">Clear</button>
                </div>
            </form>
            <a href="/admin/createCoupon">
                <button class="add-coupon-btn">+ Add Coupon</button>
            </a>
        </div>
        
        <table class="coupon-table">
            <thead>
                <tr>
                    <th>Coupon Name</th>
                    <th>Offer Price (Min)</th>
                    <th>Purchase Amount</th>
                    <th>Created On</th>
                    <th>Expire On</th>
                    <th>Status</th>
                    <th>List / Unlist</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>

                <% if (coupons && coupons.length > 0) { %>
                    <% coupons.forEach((coupon) => { %> 
                        <% let today = new Date(); %>
                        <tr>
                            <td><%= coupon.name %></td>
                            <td><%= coupon.offerPrice %></td>
                            <td><%= coupon.minimumPrice %></td>
                            <td><%= new Date(coupon.createdOn).toLocaleDateString() %></td>
                            <td><%= new Date(coupon.expireOn).toLocaleDateString() %></td>

                            <% if (today <= coupon.expireOn) { %>
                                <td><span class="status-active">Active</span></td>
                            <% } else { %>
                                <td><span class="status-expired">Expired</span></td>
                            <% } %>
                            <td>
                                <% if (coupon.isList === false) { %>
                                    <button class="list-btn" id="listed" onclick="listed('<%= coupon._id %>')">List</button>
                                <% } else {%>
                                    <button class="unlist-btn" id="unListed" onclick="unListed('<%= coupon._id %>')">Unlist</button>
                                <% } %>
                            </td>
                            <td>
                                <a href="/admin/coupon/edit-copon?couponId=<%= coupon._id %>">
                                    <button class="action-btn edit-btn">Edit</button>
                                </a>
                                <button class="action-btn delete-btn" id="delete-coupon" data-id="<%= coupon._id %>">Delete</button>
                            </td>
                        </tr>
                    <% }) %>
                <% } %>
                
            </tbody>
        </table>
        
        <div class="pagination">
            <% if (currentPage > 1) { %>
                <li><a href="?page=<%= currentPage - 1%>"> &laquo; </a></li>
            <% } %>

            <% for (let i = 1; i <= totalPages; i++) { %>
                <li><a href="?page=<%= i %>" class="<%= i === currentPage ? 'active' : '' %>"><%= i %></a></li>
            <% } %>

            <% if (currentPage < totalPages) { %>
                <li><a href="?page=<%= totalPages + 1 %>"> &raquo; </a></li>
            <% } %>
        </div>
    </div>
</body>
</html>

<script>

    document.querySelectorAll('.delete-btn').forEach(button => {
        button.addEventListener('click', function(e) {
            e.preventDefault();

            const couponId = this.dataset.id;
            console.log("Delete coupen id:", couponId);
            
            Swal.fire({
                title: "Are you sure?",
                text: "You won't be able to revert this!",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                confirmButtonText: "Yes, delete it!"
            }).then((result) => {
                if (result.isConfirmed) {
                    fetch("/admin/coupon/delete-coupon", {
                        method: "DELETE",
                        headers: {"Content-Type" : "application/json"},
                        body: JSON.stringify({couponId})
                    })
                    .then(responce => {
                        if (!responce.ok) {
                            throw new Error("Something went wrong")
                        }
                        return responce.json();
                    })
                    .then((data) => {
                        if (data.status) {
                            
                            Swal.fire({     //For message show at top right
                                toast: true,
                                position: 'top-end',
                                icon: 'delete',
                                title: data.message || 'Delete successfully.',
                                showConfirmButton: false,
                                timer: 3000
                            })
                            .then(() => {
                                location.reload();
                            })
                        } else {
                            Swal.fire({     
                                toast: true,
                                position: 'top-end',
                                icon: 'info',
                                title: data.message || 'Something went wrong..',
                                showConfirmButton: false,
                                timer: 3000
                            })
                        }
                    })
                    .catch((err) => {
                        Swal.fire({
                            toast: true,
                            position: 'top-end',
                            icon: 'error',
                            title: err.message,
                            showConfirmButton: false,
                            timer: 3000
                        });
                    })
                }
            });
        });
    });


    function listed(couponId) {
        $.ajax({
            method:"PUT",
            url: "/admin/coupon/listed",
            data: {couponId},
            success: ((response) => {
                console.log("responce:", response)
                if (response.status) {
                    Swal.fire({
                        toast: true,
                        position: 'top-end',
                        icon: 'success',
                        title: response.message || 'Coupon listed success, visible to customers',
                        showConfirmButton: false,
                        timer: 3000
                    })
                    .then(() => {
                        location.reload();
                    })
                } else {
                    Swal.fire({
                        toast: true,
                        position: 'top-end',
                        icon: 'info',
                        title: response.message,
                        showConfirmButton: false,
                        timer: 3000
                    })
                    .then(() => {
                        location.reload();
                    })
                }
            }),
            error: ((err) => {
                Swal.fire({
                    toast: true,
                    position: 'top-end',
                    icon: 'error',
                    title: err.message,
                    showConfirmButton: false,
                    timer: 3000
                })
                .then(() => {
                    location.reload();
                })
            })
        })
    };

    function unListed(couponId) {
        $.ajax({
            method:"PUT",
            url: "/admin/coupon/unListed",
            data: {couponId},
            success: ((response) => {
                console.log("responce:", response)
                if (response.status) {
                    Swal.fire({
                        toast: true,
                        position: 'top-end',
                        icon: 'success',
                        title: response.message || 'Coupon unlisted success, now not visible to customers',
                        showConfirmButton: false,
                        timer: 3000
                    })
                    .then(() => {
                        location.reload();
                    })
                } else {
                    Swal.fire({
                        toast: true,
                        position: 'top-end',
                        icon: 'info',
                        title: response.message,
                        showConfirmButton: false,
                        timer: 3000
                    })
                    .then(() => {
                        location.reload();
                    })
                }
            }),
            error: ((err) => {
                Swal.fire({
                    toast: true,
                    position: 'top-end',
                    icon: 'error',
                    title: err.message,
                    showConfirmButton: false,
                    timer: 3000
                })
                .then(() => {
                    location.reload();
                })
            })
        })
    }

</script>

